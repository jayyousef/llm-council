# Copy this file to `.env` (for docker-compose) or `.env.local` (for local dev).
# Never commit real secrets. `.env` and `.env.local` are gitignored.

# -----------------------------
# Backend (FastAPI)
# -----------------------------

# Environment name (development|production)
ENV=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/llm_council

# Auth
# - Local dev can bypass auth with ALLOW_NO_AUTH=true.
# - For production, set ALLOW_NO_AUTH=false and set a strong API_KEY_PEPPER.
ALLOW_NO_AUTH=true
API_KEY_PEPPER=change-me

# OpenRouter
OPENROUTER_API_KEY=sk-or-v1-REPLACE_ME
OPENROUTER_MAX_CONCURRENCY=6
OPENROUTER_MAX_RETRIES=2
OPENROUTER_RETRY_BASE_SECONDS=0.5
OPENROUTER_TIMEOUT_SECONDS=120
OPENROUTER_AUTH_COOLDOWN_SECONDS=60

# Optional per-mode timeouts (leave blank to use OPENROUTER_TIMEOUT_SECONDS)
OPENROUTER_TIMEOUT_SECONDS_FAST=
OPENROUTER_TIMEOUT_SECONDS_BALANCED=
OPENROUTER_TIMEOUT_SECONDS_DEEP=

# Cache
COUNCIL_CACHE_ENABLED=true
COUNCIL_CACHE_TTL_SECONDS=

# Pricing (optional; JSON string). If unset, cost_estimated may be null when pricing missing.
# MODEL_PRICING_JSON={"openai/gpt-5.1":{"prompt_per_1m":1.0,"completion_per_1m":2.0}}
MODEL_PRICING_JSON=
PRICE_BOOK_VERSION=v1

# MCP (local stdio)
# MCP_API_KEY is used by the MCP stdio server if tool input omits api_key.
MCP_API_KEY=lc_REPLACE_ME
MCP_MAX_CONCURRENT_CALLS=4
MCP_TOOL_TIMEOUT_SECONDS=300
MCP_MAX_PROMPT_CHARS=20000
MCP_MAX_TASK_CHARS=20000
MCP_MAX_REPO_FILES=25
MCP_MAX_REPO_TOTAL_CHARS=200000
MCP_MAX_PATH_CHARS=300

# Hosted tools gateway limits
HTTP_MAX_CONCURRENT_TOOL_CALLS=16
HTTP_TOOL_TIMEOUT_SECONDS=300

# Pipeline role models (optional overrides)
LEADER_MODEL=
REVIEWER_MODEL=
SECURITY_MODEL=
TEST_WRITER_MODEL=
IMPLEMENTER_MODEL=
GATE_MODEL=

# MCP council.ask mode routing (optional overrides)
MCP_MODELS_FAST=
MCP_MODELS_BALANCED=
MCP_MODELS_DEEP=
MCP_JUDGES_FAST=
MCP_JUDGES_BALANCED=
MCP_JUDGES_DEEP=
MCP_CHAIR_FAST=
MCP_CHAIR_BALANCED=
MCP_CHAIR_DEEP=

# -----------------------------
# Frontend (Vite)
# -----------------------------

# Backend base URL for the UI (Vite dev server only; docker-compose frontend uses nginx)
VITE_API_BASE_URL=http://localhost:8001

